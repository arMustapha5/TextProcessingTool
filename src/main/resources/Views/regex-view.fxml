<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="mustapha.mcfearson.krystov.Controller.RegexController">
    <VBox spacing="10" layoutX="10" layoutY="10">
        <TextArea fx:id="inputText" prefHeight="100" promptText="Enter text here"/>
        <TextField fx:id="regexPattern" promptText="Enter regex pattern"/>
        <TextField fx:id="replacementText" promptText="Replacement text (optional)"/>
        <HBox spacing="10">
            <Button text="Search" onAction="#onSearch"/>
            <Button text="Replace" onAction="#onReplace"/>
        </HBox>
        <TextArea fx:id="outputText" prefHeight="100" promptText="Results"/>
    </VBox>
</AnchorPane>
